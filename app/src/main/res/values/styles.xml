<resources>

    <!-- Base application theme. -->
    <style name="app_theme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="normal_button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normal_image_button" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="dialog_activity" parent="app_theme">
        <item name="android:title">图层管理</item>
        <item name="android:windowBackground">@color/colorWhiteOverlay</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--&lt;!&ndash;设置无标题&ndash;&gt;-->
        <item name="android:windowNoTitle">true</item>
        <!--&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowIsTranslucent">true</item>
        <!--&lt;!&ndash;设置窗口内容不覆盖&ndash;&gt;-->
        <item name="android:windowContentOverlay">@null</item>
        <!--&lt;!&ndash;背景是否模糊显示&ndash;&gt;-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!--<item name="android:minWidth">400dp</item>-->
        <!--<item name="android:minHeight">600dp</item>-->
    </style>


</resources>
