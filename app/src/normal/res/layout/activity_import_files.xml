<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.autod.gis.ui.activity.ImportFilesActivity">

    <ListView
        android:id="@+id/import_lvw_files"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/import_tvw_ftp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/import_btn_ftp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
         android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        style="@style/normal_button"
        android:drawableStart="@drawable/ic_net"
        android:text="@string/import_btn_ftp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>